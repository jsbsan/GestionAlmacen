DIM a AS Integer
a = var.alb_numero - 1
FMain.GridViewAlbaran.Rows.count = a + 1
 
 BorradosDatosIniciales.dibujogridAlbaran(obra)
 GOTO finmuestra
      
finmuestra:
END 


